<% if resource.errors.any? %>
  <h2><%= pluralize(resource.errors.count, "error") %></h2>
  <ul>
    <% resource.errors.full_messages.each do |msg| %>
    <li><div class="alert alert-danger" role="alert"><%= msg %></li></div>
  </ul>
  <% end %>
<% end %>

<div class="base_form">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h1>Регистрация</h1>
    <fieldset>
      <legend><span class="number">1</span>Главная информация</legend>
      <%= f.input :gender, label: "Пол", as: :radio_buttons, collection: [['Мужской', :male], ['Женский', :female]] %>
      <%= f.input :first_name, label: "Имя" %>
      <%= f.input :last_name, label: "Фамилия" %>
      <%= f.input :email, required: true, autofocus: true %>
      <%= f.input :password, required: true, label: 'Пароль', hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, label: 'Повторите пароль', required: true %>
    </fieldset>
    <fieldset>
      <legend><span class="number">2</span>Ваш профайл</legend>
      <%= f.input :birth_date, label: "Возраст" %>
      <label for="bio">О себе</label>
      <%= f.text_area :mini_bio %>
    </fieldset>
    <%= f.button :submit, "Зарегистрироваться", class: "button" %>
  <% end %>
  <fieldset>
  </fieldset>
</div>
