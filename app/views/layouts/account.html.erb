<!DOCTYPE html>
<html>
  <head>
    <title>Findtrip</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <%= render 'shared/navbar' %>
    <%= render 'shared/alert' %>
    <div class="container">
      <div class="row row-offcanvas row-offcanvas-right">
        <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar">
          <div class="list-group">
            <img data-src="holder.js/200x200" class="img-thumbnail" alt="200x200" style="width: 200px; height: 200px;" src="data:image/svg+xml;base64," data-holder-rendered="true">
            <%= link_to 'Мой профиль', account_profile_path(current_user.id), class: 'list-group-item' %>
            <%= link_to 'Мой гараж', account_cars_path, class: 'list-group-item' %>
            <%= link_to 'Мое фото', account_photo_path(current_user.id), class: 'list-group-item' %>
             <%= link_to 'Поездки', account_trips_path, class: 'list-group-item' %>

          </div>
        </div>
        <div class="col-xs-12 col-sm-9">
          <%= yield %>
        </div>
      </div>
      <%= render 'shared/footer' %>
    </div>
  </body>
</html>