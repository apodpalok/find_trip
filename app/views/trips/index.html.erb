<div class="search">
  <%= render 'search' %>
</div>

<% @trips.each do |trip| %>
  <h3>
    <%= link_to trip.id , trip_path(trip) %>
  </h3>

  <p>Место отправления:
    <%= trip.start_location %>
  </p>

  <p>Место прибытия:
    <%= trip.finish_location %>
  </p>

  <p>Дистанция:
    <%= trip.distance %> km
  </p>

  <p>Врема отправления:
    <%= trip.start_time.to_formatted_s(:short) %>
  </p>

  <p>Время прибытия:
    <%= trip.finish_time.to_formatted_s(:short) %>
  </p>

  <p>Продолжительность поездки:
    <%= Time.at(trip.duration).utc.strftime("%H:%M") %>
  </p>

  <p>Цена:
    <%= trip.price %>
  </p>

  <hr>
<% end %>