<h3>
  <%= link_to 'New trip', new_trip_path %>
</h3>

<%= render 'search' %>

<% @trips.each do |trip| %>
  <h3>
    <%= link_to trip.id , trip_path(trip) %>
  </h3>

  <p>Start Location:
    <%= trip.start_location %>
  </p>

  <p>Finish Location:
    <%= trip.finish_location %>
  </p>

  <p>Distance:
    <%= trip.distance %> km
  </p>

  <p>Start Time:
    <%= trip.start_time.to_formatted_s(:short) %>
  </p>

  <p>Finish Time:
    <%= trip.finish_time.to_formatted_s(:short) %>
  </p>

  <p>Duration:
    <%= Time.at(trip.duration).utc.strftime("%H:%M") %>
  </p>

  <p>Price:
    <%= trip.price %>
  </p>

  <hr>
<% end %>