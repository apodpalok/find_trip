<div class="row">
  <h3><span class="text-muted">Мое авто</span></h3>
  <hr>
  <% @user_cars.each do |car| %>
  <div class="col-xs-6 col-lg-4">
    <h2><%= link_to 'Honda Accord', account_car_path(car.id) %></h2>
    <p><img data-src="holder.js/200x200" class="img-thumbnail" alt="200x200" style="width: 200px; height: 200px;" src="data:image/svg+xml;base64," data-holder-rendered="true"></p>
    <p><%= link_to 'Редактировать', account_car_path(car.id), class: "btn btn-primary" %></p>
    <p><%= link_to 'Удалить', class: "btn btn-default" %></p>
  </div>
  <% end %>
</div>
<hr>
<br><%= link_to 'Добавить автомобиль', new_account_car_path %>